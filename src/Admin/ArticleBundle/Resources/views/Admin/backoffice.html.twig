{% extends 'base_backoffice.html.twig' %}
{% block body %}
        <div class="row back">
            <div class="col-md-2">
                <a class="btn btn-primary" href="{{  path('homepage_dev') }}">vue du site</a>
            </div>
            <div class="col-md-2 col-md-offset-3">
                <h1 class="h2">BackOffice Bro</h1>
            </div>
        </div>
        <div class="row articleViewbro">
            <div class=" panel-default panel col-md-2 ">
                <h6><a href="{{path("allArticles")}}"> visualizer tout les article </a></h6>
                <h6><a href="{{path("addArticles")}}">Ajouter un nouvelle article</a></h6>
            </div>
          <div class="col-md-9 border_left">
                {% for article in articles %}
                    <div class="row">
                        <div class="col-md-8 col-md-offset-4">
                            <h2 class="h2">{{ article.title }}</h2>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-10 col-md-offset-1">
                            <p class="text-justify">{{ article.content | raw}}</p>
                            <div class="row">
                                <div class="col-md-4 col-md-offset-8">
                                    {{ article.author }}{{ article.createdAt|date('d-m-Y') }}
                                </div>
                            </div>
                        </div>
                        <div class="col-md-10 col-md-offset-1">
                            <div class="row">
                                <div class="col-md-4 col-md-offset-4">
                                    <h3><a href="{{ path('updateArticles', {'id': article.id}) }}">mettre Ã  jours un article</a></h3>
                                </div>
                                <div class="col-md-4">
                                    <h3><a href="{{path("deleteArticles", {"id": article.id})}}">supprimer des articles</a></h3>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr />
                {% endfor %}
          </div>
        </div>
{% endblock %}